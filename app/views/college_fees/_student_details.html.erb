<div class="controls">
  <%= text_field_tag :first_name, '',:value=>@student.first_name %>
</div>
</div>
<div class="right_side">
	<label class="string optional control-label">Last Name</label>
  <%= text_field_tag :last_name, '',:value=>@student.last_name %>
</div>

<label class="string optional control-label">Father Name</label>
<div class="control-group string optional">
<div class="controls">
  <%= text_field_tag :father_name, '',:value=>@student.father_name %>
</div>
</div>
<div class="right_side">
	<label class="string optional control-label">Gender</label>
  <%= text_field_tag :gender, '',:value=>@student.gender %>
</div>