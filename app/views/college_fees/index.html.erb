<%- model_class = CollegeFee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:hall_no) %></th>
      <th><%= model_class.human_attribute_name(:bill_date_time) %></th>
      <th><%= model_class.human_attribute_name(:last_paid_amt) %></th>
      <th><%= model_class.human_attribute_name(:this_time_pay) %></th>
      <th><%= model_class.human_attribute_name(:till_now_paid) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @college_fees.each do |college_fee| %>
      <tr>
        <td><%= link_to college_fee.id, college_fee_path(college_fee) %></td>
        <td><%= college_fee.hall_no %></td>
        <td><%= college_fee.bill_date_time %></td>
        <td><%= college_fee.last_paid_amt %></td>
        <td><%= college_fee.this_time_pay %></td>
        <td><%= college_fee.till_now_paid %></td>
        <td><%=l college_fee.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_college_fee_path(college_fee), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      college_fee_path(college_fee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_college_fee_path,
            :class => 'btn btn-primary' %>
