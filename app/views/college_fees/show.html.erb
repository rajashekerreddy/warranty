<%- model_class = CollegeFee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:hall_no) %>:</strong></dt>
  <dd><%= @college_fee.hall_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_date_time) %>:</strong></dt>
  <dd><%= @college_fee.bill_date_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_paid_amt) %>:</strong></dt>
  <dd><%= @college_fee.last_paid_amt %></dd>
  <dt><strong><%= model_class.human_attribute_name(:this_time_pay) %>:</strong></dt>
  <dd><%= @college_fee.this_time_pay %></dd>
  <dt><strong><%= model_class.human_attribute_name(:till_now_paid) %>:</strong></dt>
  <dd><%= @college_fee.till_now_paid %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              college_fees_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_college_fee_path(@college_fee), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              college_fee_path(@college_fee),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
